{
  "manifest_version": 3,
  "name": "PWPush Extension",
  "version": "2.0",
  "description": "Send selected text to PWPush and copy the generated link to the clipboard.",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "notifications",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"  
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "19": "icons/icon_19.png",
    "38": "icons/icon_38.png",
    "128": "icons/icon_128.png"
  }
}
